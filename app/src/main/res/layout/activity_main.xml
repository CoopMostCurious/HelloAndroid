<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:background="@drawable/animation_list"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context="com.example.cooper.helloandroid.MainActivity">

    <ImageView
        android:id="@+id/photo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        app:srcCompat="@drawable/android" />


    <ImageView
        android:id="@+id/logo"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="72dp"
        android:layout_marginRight="72dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/udacity_for_app" />

    <TextView
        android:id="@+id/companyName"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_alignEnd="@+id/companyStreet"
        android:layout_alignRight="@+id/companyStreet"
        android:layout_below="@+id/logo"
        android:layout_marginTop="35dp"
        android:paddingEnd="30dp"
        android:paddingLeft="30dp"
        android:paddingStart="30dp"
        android:text="Udacity"
        android:textColor="#A6ACAD" />

    <TextView
        android:id="@+id/companyStreet"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_alignEnd="@+id/companyCityStateZip"
        android:layout_alignRight="@+id/companyCityStateZip"
        android:layout_below="@+id/companyName"
        android:paddingEnd="30dp"
        android:paddingLeft="30dp"
        android:paddingStart="30dp"
        android:text="2465 Latham St"
        android:textColor="#A6ACAD" />

    <TextView
        android:id="@+id/companyCityStateZip"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_alignEnd="@+id/companyPhone"
        android:layout_alignRight="@+id/companyPhone"
        android:layout_below="@+id/companyStreet"
        android:paddingEnd="30dp"
        android:paddingLeft="30dp"
        android:paddingStart="30dp"
        android:text="Mountain View, CA 94043"
        android:textColor="#A6ACAD" />

    <TextView
        android:id="@+id/companyPhone"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_alignLeft="@+id/logo"
        android:layout_alignStart="@+id/logo"
        android:layout_below="@+id/companyCityStateZip"
        android:paddingEnd="30dp"
        android:paddingLeft="30dp"
        android:paddingStart="30dp"
        android:text="650-555-5555"
        android:textColor="#A6ACAD" />

    <TextView
        android:id="@+id/linkToSite"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_alignEnd="@+id/companyPhone"
        android:layout_alignRight="@+id/companyPhone"
        android:layout_below="@+id/companyPhone"
        android:paddingEnd="30dp"
        android:paddingLeft="30dp"
        android:paddingStart="30dp"
        android:text="www.udacity.edu"
        android:textColor="#A6ACAD" />

    <TextView
        android:id="@+id/socialMediaLinks"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_alignEnd="@+id/linkToSite"
        android:layout_alignRight="@+id/linkToSite"
        android:layout_below="@+id/linkToSite"
        android:paddingEnd="30dp"
        android:paddingLeft="30dp"
        android:paddingStart="30dp"
        android:text="Social Media Links Here" />


</RelativeLayout>
